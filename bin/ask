#!/usr/bin/env bash
# shellcheck disable=SC2034 # don't warn for unused variables

set -o errexit
# set -o nounset
set -o pipefail
# set -o xtrace

usage () {
  cat << EOF
Usage: $(basename "$0") <text>
  Print $(colorize blue 'blue text') without newline.  Intended as prefix to 'read' prompts
EOF
  exit
}
[[ -z "$1" ]] && usage

if [[ -n "$(command -v fold)" ]]; then
  colorize blue "${1}" | fold -s -w 120  # queries are followed by 'read' command; do not need newline
else
  colorize blue "${1}"  # queries are followed by 'read' command; do not need newline
fi
