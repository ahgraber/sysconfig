#!/usr/bin/env bash
# shellcheck disable=SC2034 # don't warn for unused variables

set -o errexit
# set -o nounset
set -o pipefail
# set -o xtrace

if [[ -n "$(command -v fold)" ]]; then
  >&2 colorize red "${1}\n" | fold -s -w 120  # redirect to stderr
else
  >&2 colorize red "${1}\n"  # redirect to stderr
fi
