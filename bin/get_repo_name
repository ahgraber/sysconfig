#!/usr/bin/env bash
# shellcheck disable=SC2034 # don't warn for unused variables

set -o errexit
# set -o nounset
set -o pipefail
# set -o xtrace

usage () {
  cat << EOF
Usage: $(basename "$0") <path>
  Return directory name containing of git repo at provided path

Example: '$(basename "$0") .'
EOF
  exit
}
[[ -z "$1" ]] && usage

is_git_repo "$1" && git rev-parse --show-toplevel || exit 1
