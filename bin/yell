#!/usr/bin/env bash
# shellcheck disable=SC2034 # don't warn for unused variables

set -o errexit
# set -o nounset
set -o pipefail
# set -o xtrace

usage () {
  cat << EOF
Usage: $(basename "$0") <text>
  Print $(colorize red 'red text') with newline and redirect to stderr.  Intended as error message.
EOF
  exit
}
[[ -z "$1" ]] && usage

if [[ -n "$(command -v fold)" ]]; then
  >&2 colorize red "${1}\n" | fold -s -w 120
else
  >&2 colorize red "${1}\n"
fi
