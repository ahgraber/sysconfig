{
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[markdown]": {
    "editor.defaultFormatter": "DavidAnson.vscode-markdownlint",
    "files.trimTrailingWhitespace": false
  },
  "[python]": {
    "editor.codeActionsOnSave": {
      // "source.fixAll.ruff": true,
      "source.organizeImports.ruff": true
    },
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true,
    "editor.tabSize": 4,
    "editor.wordBasedSuggestions": false
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "autoDocstring.docstringFormat": "numpy",
  "black-formatter.args": ["--config", "${workspaceFolder}/pyproject.toml"],
  "diffEditor.ignoreTrimWhitespace": false,
  "diffEditor.renderSideBySide": true,
  "direnv.path.executable": "/opt/homebrew/bin/direnv",
  "editor.formatOnPaste": false,
  "editor.formatOnSave": false,
  "editor.formatOnType": false,
  "editor.minimap.enabled": false,
  "editor.renderWhitespace": "all",
  "editor.rulers": [79, 119],
  "editor.smoothScrolling": true,
  "editor.tabSize": 2,
  "editor.wordWrap": "on",
  "editor.wordWrapColumn": 120,
  "extensions.ignoreRecommendations": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "git.autoStash": true,
  "git.confirmSync": false,
  "git.suggestSmartCommit": false,
  "interactiveWindow.alwaysScrollOnNewCell": true,
  "html.format.indentInnerHtml": true,
  "jupyter.askForKernelRestart": false,
  "jupyter.excludeUserSitePackages": true,
  "jupyter.experiments.enabled": false,
  "jupyter.interactiveWindow.textEditor.executeSelection": true,
  "jupyter.jupyterCommandLineArguments": ["--port=9999", "--ip=127.0.0.1"],
  "jupyter.runStartupCommands": ["$load_ext autoreload", "%autoreload 2"],
  "markdown.extension.list.indentationSize": "adaptive",
  "markdown.extension.math.enabled": true,
  "mssql.connections": [
    {
      "database": "{{put-database-name-here}}",
      "password": "",
      "server": "{{put-server-name-here}}",
      "user": "{{put-username-here}}"
    }
  ],
  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "left"
  },
  "notebook.lineNumbers": "on",
  "notebook.output.textLineLimit": 42,
  "output.smartScroll.enabled": false,
  "prettier.configPath": ".prettierrc",
  "prettier.printWidth": 120,
  "prettier.semi": false,
  "python.analysis.autoSearchPaths": true,
  "python.analysis.completeFunctionParens": true,
  "python.analysis.extraPaths": ["${workspaceFolder}"],
  "python.defaultInterpreterPath": "${env:HOME}/mambaforge/bin/python",
  "python.experiments.enabled": false,
  "python.experiments.optInto": [],
  "python.formatting.autopep8Args": ["--max-line-length", "120", "--experimental"],
  "python.formatting.blackArgs": [
    "line-length = 100",
    "include = '\\.pyi?$|\\.ipynb$'",
    "extend-exclude = '''/( \\.git | \\.hg | \\.ipynb_checkpoints$ | \\.mypy_cache | \\.tox | \\.venv | _build | buck-out | build | dist )/'''"
  ],
  "python.formatting.provider": "black",
  "python.languageServer": "Pylance",
  "python.linting.ignorePatterns": [".vscode/*"],
  "python.linting.pylintEnabled": false,
  "python.pythonPath": "${env:HOME}/mambaforge/bin/python",
  "python.testing.pytestEnabled": true,
  "redhat.telemetry.enabled": false,
  "security.workspace.trust.untrustedFiles": "open",
  "shellcheck.executablePath": "/opt/homebrew/bin/shellcheck",
  "telemetry.telemetryLevel": "off",
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.env.osx": {
    "PYTHONPATH": "${env:PYTHONPATH}:${workspaceFolder}/src"
  },
  "terminal.integrated.env.linux": {
    "PYTHONPATH": "${env:PYTHONPATH}:${workspaceFolder}/src"
  },
  "terminal.integrated.env.windows": {
    "PYTHONPATH": "${env:PYTHONPATH};${workspaceFolder}/src"
  },
  "terminal.integrated.fontFamily": "MesloLGS NF",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.inheritEnv": false,
  "terminal.integrated.persistentSessionScrollback": 10000,
  "terminal.integrated.profiles.osx": {
    "x86 zsh": {
      "args": ["-arch", "x86_64", "/bin/zsh"],
      "path": "/usr/bin/arch"
    }
  },
  "terminal.integrated.commandsToSkipShell": ["workbench.action.terminal.sendSequence"],
  "terminal.integrated.scrollback": 10000,
  "terminal.integrated.sendKeybindingsToShell": false, // false for keybindings
  "terminal.integrated.shellIntegration.decorationsEnabled": "never",
  "terminal.integrated.shellIntegration.enabled": true,
  "vs-kubernetes": {
    "vs-kubernetes.crd-code-completion": "disabled",
    "vscode-kubernetes.helm-path.mac": "/opt/homebrew/bin/helm",
    "vscode-kubernetes.kubectl-path.mac": "/opt/homebrew/bin/kubectl"
  },
  "vscode-kubernetes.helm-path": "/opt/homebrew/bin/helm",
  "vscode-kubernetes.helm-path.mac": "/opt/homebrew/bin/helm",
  "vscode-kubernetes.kubectl-path": "/opt/homebrew/bin/kubectl",
  "vscode-kubernetes.kubectl-path.mac": "/opt/homebrew/bin/kubectl",
  "workbench.colorTheme": "Material Night Eighties",
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },
  "workbench.enableExperiments": false,
  "workbench.iconTheme": "material-icon-theme",
  "workbench.settings.enableNaturalLanguageSearch": false,
  "workbench.startupEditor": "newUntitledFile"
}
